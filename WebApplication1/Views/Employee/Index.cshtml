@model List<Employee>


<div class="d-flex justify-content-center">
    <div class="w-50">
        <div class="w-100 mt-4 text-end ">
            <a class="btn btn-secondary btn-lg" href="/Employee/Create">Create</a>
        </div>

        <table class="table table-dark table-striped table-hover mt-5">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">name</th>
                    <th scope="col">Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr>
                        <th scope="row">@emp.Id</th>
                        <td>@emp.Name</td>
                        <td>
                            <a href="/Employee/Details/@emp.Id">details</a>
                            <a href="/Employee/Delete/@emp.Id">delete</a>
                            <a href="/Employee/Update/@emp.Id">update</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
   
</div>
